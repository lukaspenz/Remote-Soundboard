{
  "name": "remote-soundboard",
  "version": "1.0.1",
  "description": "A locally hosted soundboard with remote triggering capabilities",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg . --targets node18-win-x64 --output dist/soundboard.exe",
    "build:all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path dist"
  },
  "bin": "server.js",
  "pkg": {
    "assets": [
      "public/**/*",
      "sounds/**/*"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "soundboard",
    "audio",
    "remote"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "node-wav-player": "^0.2.0",
    "speaker": "^0.5.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  }
}
